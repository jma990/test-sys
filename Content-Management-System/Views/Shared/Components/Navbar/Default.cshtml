@* Modern Responsive Sidebar Navigation *@
@model Content_Management_System.Models.Shared.NavbarModel

<link rel="stylesheet" href="@Url.Content(PathDirectory.NavbarCSS)" />
<nav class="app-sidebar" role="navigation" aria-label="Main navigation">
    <ul>
        <!-- Logo Section -->
        <li class="nav-item">
            <a href="@Url.Content(Model.Role == nameof(UserRole.SuperAdmin)
                ? PathDirectory.DepartmentsPage
                : PathDirectory.AnnouncementsPage)" 
               class="logo" 
               title="Go to Dashboard">
                <img src="@Url.Content(PathDirectory.Logo)" alt="Dashboard Logo">
                <span class="nav-text">Dashboard</span>
                <span class="nav-text">@Model.UserName</span>
                <span class="nav-text">@Model.Role</span>
            </a>
        </li>

        <!-- Main Navigation Section -->
        <div class="nav-section">
            <span class="nav-section-title">Navigation</span>
            
            @if (Model.Role == nameof(UserRole.Admin) || Model.Role == nameof(UserRole.Member))
            {
                <li class="nav-item">
                    <a href="@Url.Content(PathDirectory.AnnouncementsPage)" title="View announcements">
                        <i class="fas fa-home"></i>
                        <span>Home</span>
                    </a>
                </li>
            }

            @if (Model.Role == nameof(UserRole.Admin))
            {
                <li class="nav-item">
                    <a href="@Url.Content(PathDirectory.AdminPostsPage)" title="View your posts">
                        <i class="fas fa-pen"></i>
                        <span>My Posts</span>
                    </a>
                </li>
            }

            @if (Model.Role == nameof(UserRole.SuperAdmin) || Model.Role == nameof(UserRole.Admin))
            {
                <li class="nav-item">
                    <a href="@Url.Content(PathDirectory.DepartmentsPage)" title="Manage departments">
                        <i class="fas fa-building"></i>
                        <span>Departments</span>
                    </a>
                </li>
            }
        </div>

        <!-- Management Section -->
        @if (Model.Role == nameof(UserRole.SuperAdmin) || Model.Role == nameof(UserRole.Admin))
        {
            <div class="nav-section">
                <span class="nav-section-title">Management</span>
                <ul class="dropdown">
                    <li class="nav-item">
                        <a class="dropdown-item" 
                           href="@Url.Content(PathDirectory.UserManagementPage)"
                           title="Manage system users">
                            <i class="fas fa-users-cog"></i>
                            <span>User Management</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="dropdown-item" 
                           href="@Url.Content(PathDirectory.AccountCreationPage)"
                           title="Create new accounts">
                            <i class="fas fa-user-plus"></i>
                            <span>Account Creation</span>
                        </a>
                    </li>
                </ul>
            </div>
        }

        <!-- Bottom Section (Account Settings & Logout) -->
        @if (Model?.UserName != null)
        {
            <div class="nav-section nav-section-bottom">
                <li class="nav-item account-settings">
                    <a href="@Url.Content(PathDirectory.AccountSettingsPage)" title="Manage your account">
                        <i class="fas fa-cog"></i>
                        <span>Settings</span>
                    </a>
                </li>

                <li class="nav-item logout">
                    <a href="@Url.Content(PathDirectory.LogoutPage)" title="Sign out from the system">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Log out</span>
                    </a>
                </li>
            </div>
        }
    </ul>
</nav>