@page
@model Content_Management_System.Pages.AccountSettingsModel
@{
}

@section Styles {
    <link rel="stylesheet" href="@Url.Content(PathDirectory.AccountSettingsCSS)" />
}

<div class="account-settings-container">
    <div class="account-settings-header">
        <h2>Account Settings</h2>
        <p>Manage your personal information and security settings</p>
    </div>

    <div class="account-settings-grid">
        <div class="settings-card">
            <div class="settings-card-header">
                <div class="settings-card-icon">
                    <i class="fas fa-user-edit"></i>
                </div>
                <h3 class="settings-card-title">Personal Info</h3>
            </div>
            <div class="settings-card-body">
                <p class="settings-card-description">
                    Update your first name, middle name, last name, and email address to keep your profile current.
                </p>
                <a asp-page="@Url.Content(PathDirectory.ChangePersonalInfoPage)" class="settings-card-btn primary">
                    <i class="fas fa-arrow-right"></i>
                    <span>Update Info</span>
                </a>
            </div>
        </div>

        <div class="settings-card">
            <div class="settings-card-header danger">
                <div class="settings-card-icon">
                    <i class="fas fa-lock"></i>
                </div>
                <h3 class="settings-card-title">Password</h3>
            </div>
            <div class="settings-card-body">
                <p class="settings-card-description">
                    Change your password to maintain account security. Use a strong, unique password.
                </p>
                <a asp-page="@Url.Content(PathDirectory.ChangePasswordPage)" class="settings-card-btn danger">
                    <i class="fas fa-shield-alt"></i>
                    <span>Change Password</span>
                </a>
            </div>
        </div>
    </div>
</div>