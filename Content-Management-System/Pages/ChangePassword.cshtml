@page
@model Content_Management_System.Pages.ChangePasswordModel
@{
}

@section Scripts {
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: '@TempData["SuccessMessage"]'
            });
        </script>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: '@TempData["ErrorMessage"]'
            });
        </script>
    }

    <script>
        function togglePassword(id, toggleBtnId) {
            const input = document.getElementById(id);
            const toggleBtn = document.getElementById(toggleBtnId);

            if (input.type === "password") {
                input.type = "text";
                toggleBtn.innerHTML = "Hide";
            } else {
                input.type = "password";
                toggleBtn.innerHTML = "Show";
            }
        }
    </script>
}

<h2>Update Password</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.CurrentPassword" class="form-label">Enter Current Password</label><span class="text-danger">*</span>
        <div class="input-group">
            <input asp-for="Input.CurrentPassword" type="password" class="form-control" id="currentPassword" value="@Model.Input.CurrentPassword" />
            <button type="button" class="btn btn-outline-secondary" id="toggleCurrent" onclick="togglePassword('currentPassword', 'toggleCurrent')">Show</button>
        </div>
        <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.NewPassword" class="form-label">Enter New Password</label><span class="text-danger">*</span>
        <div class="input-group">
            <input asp-for="Input.NewPassword" type="password" class="form-control" id="newPassword" value="@Model.Input.NewPassword" />
            <button type="button" class="btn btn-outline-secondary" id="toggleNew" onclick="togglePassword('newPassword', 'toggleNew')">Show</button>
        </div>
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.ConfirmPassword" class="form-label">Confirm New Password</label><span class="text-danger">*</span>
        <div class="input-group">
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" id="confirmPassword" value="@Model.Input.ConfirmPassword" />
            <button type="button" class="btn btn-outline-secondary" id="toggleConfirm" onclick="togglePassword('confirmPassword', 'toggleConfirm')">Show</button>
        </div>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
