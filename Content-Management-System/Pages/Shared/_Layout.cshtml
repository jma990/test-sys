 ﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="@Url.Content(PathDirectory.BootstrapCSS)" rel="stylesheet" />
    <script src="@Url.Content(PathDirectory.BootstrapJS)"></script>
    <script src="@Url.Content(PathDirectory.SiteJS)"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="@Url.Content(PathDirectory.LayoutCSS)" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />   <!-- added -->
    @RenderSection("Styles", required: false)
    <title>Content Management System</title>
</head>
<body> 
    <header>
            @if (User?.Identity?.IsAuthenticated == true &&
            User.HasClaim(c => c.Type == "MustChangePassword" && c.Value == "False"))
            {
                <button class="sidebar-toggle" type="button" aria-label="Toggle sidebar" title="Toggle sidebar" aria-pressed="false">
                    <span class="icon">☰</span>
                </button>
                @await Component.InvokeAsync("Navbar", new { user = User })
            }
    </header>

    @if (ViewData["NoContainer"] as bool? == true)
    {
        @RenderBody()
    }
    else
    {
        <div class="main-column">
            <div class="app-container">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        </div>
    }

    @RenderSection("Scripts", required: false)

    <script>
        (function(){
            const KEY = 'sidebarCollapsed';
            const body = document.body;

            function setCollapsed(collapsed, btn) {
                if (collapsed) body.classList.add('sidebar-collapsed');
                else body.classList.remove('sidebar-collapsed');
                try { localStorage.setItem(KEY, collapsed ? '1' : '0'); } catch(e) {}
                if (btn) btn.setAttribute('aria-pressed', collapsed ? 'true' : 'false');
            }

            function toggleFromButton(btn) {
                setCollapsed(!body.classList.contains('sidebar-collapsed'), btn);
            }

            // restore saved state as early as possible
            try {
                const stored = localStorage.getItem(KEY);
                if (stored === '1') body.classList.add('sidebar-collapsed');
            } catch(e){}

            // Attach handlers after DOM ready and use delegation so the button is always handled
            document.addEventListener('DOMContentLoaded', function(){
                // delegated click: works even if DOM changes
                document.addEventListener('click', function(e){
                    const btn = e.target.closest('.sidebar-toggle');
                    if (btn) {
                        e.preventDefault();
                        toggleFromButton(btn);
                    }
                }, { passive: false });

                // Mobile: Close sidebar when clicking overlay
                document.addEventListener('click', function(e){
                    // Check if we clicked the pseudo-element overlay
                    if (e.target === body || (e.target === document.documentElement && window.innerWidth <= 480)) {
                        const rect = body.getBoundingClientRect();
                        // Only close if click was outside sidebar area (in overlay)
                        if (e.clientX > 260 && !body.classList.contains('sidebar-collapsed') && window.innerWidth <= 480) {
                            const toggleBtn = document.querySelector('.sidebar-toggle');
                            setCollapsed(true, toggleBtn);
                        }
                    }
                }, { passive: true });

                // keyboard accessibility: Space/Enter on focused button
                document.addEventListener('keydown', function(e){
                    const active = document.activeElement;
                    if (active && active.classList && active.classList.contains('sidebar-toggle') &&
                        (e.key === ' ' || e.key === 'Enter')) {
                        e.preventDefault();
                        toggleFromButton(active);
                    }
                });

                // Keyboard accessibility: Escape key to close sidebar on mobile
                document.addEventListener('keydown', function(e){
                    if (e.key === 'Escape' && !body.classList.contains('sidebar-collapsed') && window.innerWidth <= 480) {
                        const toggleBtn = document.querySelector('.sidebar-toggle');
                        setCollapsed(true, toggleBtn);
                    }
                });

                // Auto-collapse sidebar when clicking navigation links (except logo) on mobile
                document.addEventListener('click', function(e){
                    const link = e.target.closest('.app-sidebar a');
                    if (link && !link.classList.contains('logo')) {
                        // Collapse sidebar after a short delay to allow navigation
                        if (window.innerWidth <= 768) {
                            setTimeout(function() {
                                const toggleBtn = document.querySelector('.sidebar-toggle');
                                setCollapsed(true, toggleBtn);
                            }, 150);
                        }
                    }
                });

                // Highlight active page in sidebar
                const currentPath = window.location.pathname;
                document.querySelectorAll('.app-sidebar a').forEach(function(link) {
                    if (link.getAttribute('href') === currentPath) {
                        link.classList.add('active');
                    }
                });

                // Handle window resize: reset sidebar on larger screens
                window.addEventListener('resize', function() {
                    if (window.innerWidth > 768) {
                        // Keep state from localStorage on larger screens
                        try {
                            const stored = localStorage.getItem(KEY);
                            if (stored === '1') {
                                body.classList.add('sidebar-collapsed');
                            } else {
                                body.classList.remove('sidebar-collapsed');
                            }
                        } catch(e){}
                    }
                });
            });
        })();
    </script>
</body>
